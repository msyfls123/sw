{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": [
    "./script/**/*.ts",
    "./src/**/*.ts"
  ],
  "ts-node": {
    "transpileOnly": true
  },
}
